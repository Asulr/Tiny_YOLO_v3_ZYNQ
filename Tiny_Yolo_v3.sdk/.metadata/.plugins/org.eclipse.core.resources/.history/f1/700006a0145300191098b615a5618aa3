/*
 * helloworld.c: simple test application
 *
 * This application configures UART 16550 to baud rate 9600.
 * PS7 UART (Zynq) is not initialized by this application, since
 * bootrom/bsp configures it to baud rate 115200
 *
 * ------------------------------------------------
 * | UART TYPE   BAUD RATE                        |
 * ------------------------------------------------
 *   uartns550   9600
 *   uartlite    Configurable only in HW design
 *   ps7_uart    115200 (configured by bootrom/bsp)
 */

#include <stdio.h>
#include "darknet.h"
#include "coco_names.h"
//#include "platform.h"
//#include "xil_printf.h"

int main()
{
    //init_platform();

    //print("Hello World\n\r");

    float thresh = 0.5;
    float hier_thresh = 0.5;
    float nms=.45;
    char **names = coco_names;
    network *net = parse_network_cfg();
    fprintf(stderr,"End of Parse Network\n\r");
    load_weights(net);
    fprintf(stderr,"End of Load Weight\n\r");
    set_batch_network(net, 1);
    srand(2222222);
    image im = load_image_color(0,0);
    image sized = letterbox_image(im, net->w, net->h);
    layer l = net->layers[net->n-1];


    float *X = sized.data;
    network_predict(net, X);

    fprintf(stderr,"Predict Retrieved\n\r");

    int nboxes = 0;
    detection *dets = get_network_boxes(net, im.w, im.h, thresh, hier_thresh, 0, 1, &nboxes);
    if (nms) do_nms_sort(dets, nboxes, l.classes, nms);
    fprintf(stderr,"%f\n", dets[1].prob[2]);
    draw_detections(im,dets,nboxes,thresh,names,l.classes);

    free_detections(dets, nboxes);

    free_image(im);
    free_image(sized);
    fprintf(stderr,"End of Detection\n\r");

   // cleanup_platform();
    return 0;
}
